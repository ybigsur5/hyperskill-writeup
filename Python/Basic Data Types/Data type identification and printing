# Define a variable with a string value
data = "Hello, world!"
data_type = type(data)
print("The data is a", data_type)

# Define a variable with an integer value
data = 42
data_type = type(data)
print("The data is an", data_type)

# Define a variable with a float value
data = 3.14
data_type = type(data)
print("The data is a", data_type)
